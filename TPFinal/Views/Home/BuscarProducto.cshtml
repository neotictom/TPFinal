@{
    ViewData["Title"] = "Producto";
}
@for(int i = 0; i<=@ViewBag.Prod.Count - 1; i++){
    <div class="card" >
  <div class="card-body">
  <img src="@ViewBag.Prod[i].img" class="card-img-top" alt="...">
  <h5 class="card-title">@ViewBag.Prod[i].Nombre</h5>
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="VerDetalle(@ViewBag.Prod[i].IdProducto)">
  Mostrar info
</button>
</div>
  </div>
 }
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="Nombre">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <img class="img-fluid" id="img">
        <div id="Descripcion"></div>
        <div id="Precio"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
